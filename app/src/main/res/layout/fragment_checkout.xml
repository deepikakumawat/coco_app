<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nav.richkart.checkout.CheckoutFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="20dp"
               >

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.7dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.nav.richkart.customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.03"
                            android:text="Order Total"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <com.nav.richkart.customfonts.TextViewSFProDisplayMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.02"
                            android:text="Total is including tax and delivery charges"
                            android:textColor="#99000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:layout_marginRight="21dp"
                        android:letterSpacing="0"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18.3sp" />
                </LinearLayout>
            </LinearLayout>


            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="13.3dp"
                android:text="Ship To"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_marginRight="8.9dp"
                android:background="@drawable/rect_recycler"
                android:elevation="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtAddress1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Address1"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:background="#4a707070" />

                        <com.nav.richkart.customfonts.Button_Roboto_Medium
                            android:id="@+id/btnChange"
                            style="@style/buttonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Change" />

                        <com.nav.richkart.customfonts.Button_Roboto_Medium
                            android:id="@+id/btnAddAddress"
                            style="@style/buttonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="Add Address"
                          />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtAddress2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Landmark"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtCity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="City"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtState"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="State"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtZipcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Zipcode"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />


                        </LinearLayout>


                        <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="13.3dp"
                android:text="Payment Type"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_marginRight="8.9dp"
                android:background="@drawable/rect_recycler"
                android:elevation="2dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rgPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp">

                    <RadioButton
                        android:id="@+id/rbPOD"
                        style="@style/radionbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingLeft="10dp"
                        android:text="@string/pay_on_delivery"
                        android:textColor="#666666"
                        android:textSize="@dimen/txt_14sp" />

                    <RadioButton
                        android:id="@+id/rbPayOnline"
                        style="@style/radionbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:checked="false"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="@string/pay_online"
                        android:textColor="#666666"
                        android:textSize="@dimen/txt_14sp" />

                </RadioGroup>

            </LinearLayout>

            <com.nav.richkart.customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:text="Conform your details above"
                android:textColor="@color/black"
                android:textSize="13.3sp" />


            <com.nav.richkart.customfonts.Button_Roboto_Medium
                android:id="@+id/txtConfirmPlaceOrder"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="25dp"
                android:text="Confirm and place order" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>