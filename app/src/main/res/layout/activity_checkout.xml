<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.checkout.CheckoutActivity">

    <include layout="@layout/toolbar_cart" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_marginTop="13.3dp"
                android:layout_marginRight="8.9dp"
                android:background="@drawable/rect_recycler"
                android:elevation="4dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="20dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.7dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.03"
                            android:text="Order Total"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <customfonts.TextViewSFProDisplayMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.02"
                            android:text="Total is including tax and delivery charges"
                            android:textColor="#99000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:layout_marginRight="21dp"
                        android:letterSpacing="0"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18.3sp" />
                </LinearLayout>
            </LinearLayout>


            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="13.3dp"
                android:text="Ship To"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_marginRight="8.9dp"
                android:background="@drawable/rect_recycler"
                android:elevation="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtAddress1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="Address1"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#4a707070" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:letterSpacing="0.03"
                            android:text="Change"
                            android:textColor="@color/black"
                            android:textSize="12.7sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtAddAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:letterSpacing="0.03"
                            android:text="Add Address"
                            android:textColor="@color/black"
                            android:textSize="12.7sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtAddress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="Address2"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtLandmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="Landmark"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="City"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="State"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="Country"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtZipcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="17dp"
                            android:layout_weight="1"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="1dp"
                            android:text="Zipcode"
                            android:textColor="@color/black"
                            android:textSize="13sp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#4a707070" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.3dp"
                    android:layout_marginTop="13.3dp"
                    android:layout_marginRight="8.9dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="15.2dp">

                        <RadioButton
                            android:id="@+id/button1"
                            style="@style/radionbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="6dp"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/deliveryType"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.3dp"
                                    android:layout_weight="1"
                                    android:letterSpacing="0.03"
                                    android:text="Express Delivery"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20.3dp"
                                    android:text="+$9"
                                    android:textColor="@color/toolbarColor" />
                            </LinearLayout>

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.3dp"
                                android:letterSpacing="0.03"
                                android:text="1 day Delivery"
                                android:textColor="@color/greyText"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewline"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="36dp"
                        android:background="@color/viewLineColor"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingBottom="15.2dp">

                        <RadioButton
                            android:id="@+id/button2"
                            style="@style/radionbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="6dp"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/deliveryType"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.3dp"
                                    android:layout_weight="1"
                                    android:letterSpacing="0.03"
                                    android:text="Normal Delivery"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/noOfDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.3dp"
                                android:letterSpacing="0.03"
                                android:text="Upto 5 Business Days "
                                android:textColor="@color/greyText"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:clipToPadding="false"-->
                    <!--android:nestedScrollingEnabled="false"-->
                    <!--android:id="@+id/recycler2">-->
                    <!--</android.support.v7.widget.RecyclerView>-->
                </LinearLayout>
            </LinearLayout>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="13.3dp"
                android:text="Payment Type"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_marginRight="8.9dp"
                android:background="@drawable/rect_recycler"
                android:elevation="2dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPaymentType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:text="Conform your details above"
                android:textColor="@color/black"
                android:textSize="13.3sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Get 50% Cashback on this order, upto 150Rs, TC apply"
                    android:textColor="@color/black"
                    android:textSize="10.7sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/info" />
            </LinearLayout>

            <customfonts.Button_SF_Pro_Display_Semibold
                android:id="@+id/txtConfirmPlaceOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_rect"
                android:letterSpacing="0.03"
                android:text="Confirm and place order"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13.3sp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>