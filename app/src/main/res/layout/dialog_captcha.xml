<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="I am not a robot"
        android:textColor="@color/appgray"
        android:textSize="@dimen/txt_16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <customfonts.TextViewSFProDisplaySemibold
                android:id="@+id/txtCaptcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:text="192"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_25sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imgReload"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_reload" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lyReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <customfonts.EditText_Roboto_Meidum
                android:id="@+id/etxtEnterTheCharacters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="Enter the Number"
                android:inputType="number"
                android:padding="@dimen/dimen_20dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <customfonts.Button_Roboto_Medium
                android:id="@+id/btnConfirmCaptcha"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CONFIRM ORDER"
                android:textAllCaps="false" />


            <customfonts.TextViewSFProDisplayMedium
                android:id="@+id/txtReturnToPaymentOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:text="Return to Payment Option"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/txt_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>