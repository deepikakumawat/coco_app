<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_gray"
        android:orientation="vertical">


        <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="17dp"
            android:text="Delivery"
            android:textColor="@color/black"
            android:textSize="12.7sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/map_marker" />

                    <com.nav.richkart.customfonts.EditText_Roboto_Regular
                        android:id="@+id/etPincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="#00000000"
                        android:hint="Enter Delivery Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/viewline_ver" />
            </LinearLayout>

            <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/txtCheckPincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Check"
                android:textColor="@color/yellow"
                android:textSize="12.7sp" />


        </LinearLayout>

        <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
            android:id="@+id/txtPincodeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:textSize="12.7sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lyUsuallyDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usually delivered in 3-4 days"
                android:textColor="#777b7e"
                android:textSize="13sp" />

            <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13sp"
                android:text="Enter pincode for exact delivery dates/charges"
                android:textColor="@color/cut_price"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="29dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Review And "
                        android:textColor="@color/black"
                        android:textSize="12.7sp" />

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa"
                        android:textColor="@color/black"
                        android:textSize="12.7sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_rect"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp">

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="4.4"
                                android:textColor="@color/white"
                                android:textSize="12.3dp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:src="@drawable/star"
                                android:tint="@color/white" />


                        </LinearLayout>


                    </LinearLayout>

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtRatingCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="@string/review"
                        android:textColor="@color/cut_price"
                        android:textSize="12.3sp" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/viewmore" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/lyTopReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">


                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Review"
                    android:textColor="#241f1f" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txtUserNameDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="By Guest on 24 March 2017"
                    android:textColor="@color/cut_price"
                    android:textSize="10.3sp" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtUserComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Surprise Gift to my sister, she just jumped in air,loved it...."
                    android:textColor="#545d64"
                    android:textSize="11.3sp" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtViewAllReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="View All Reviews"
                    android:textColor="@color/dark_red"
                    android:textSize="12.7sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>