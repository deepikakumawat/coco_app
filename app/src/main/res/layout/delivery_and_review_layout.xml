<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14.5dp"
        app:cardBackgroundColor="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Review And "
                        android:textColor="@color/black"
                        android:textSize="12.7sp" />

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa"
                        android:textColor="@color/black"
                        android:textSize="12.7sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_rect"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ly_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp">

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="4.4"
                                android:textColor="@color/white"
                                android:textSize="12.3dp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:src="@drawable/star"
                                android:tint="@color/white" />


                        </LinearLayout>


                    </LinearLayout>

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtRatingCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="@string/review"
                        android:textColor="@color/cut_price"
                        android:textSize="12.3sp" />

                    <ImageView
                        android:id="@+id/img_review"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/viewmore" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/lyTopReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">


                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Review"
                    android:textColor="#241f1f" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txtUserNameDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="By Guest on 24 March 2017"
                    android:textColor="@color/cut_price"
                    android:textSize="10.3sp" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtUserComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Surprise Gift to my sister, she just jumped in air,loved it...."
                    android:textColor="#545d64"
                    android:textSize="11.3sp" />


                <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtViewAllReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="View All Reviews"
                    android:textColor="@color/dark_red"
                    android:textSize="12.7sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

