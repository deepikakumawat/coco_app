<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ryParent"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.login.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62.7dp"
            android:src="@drawable/ic_richkart_logo_login" />

        <customfonts.TextViewSFProDisplaySemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="WORLDâ€™s Leading Ecommerce Platform"
            android:textColor="@color/black" />

        <customfonts.EditText_Roboto_Meidum
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/round_rect"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp" />

        <customfonts.EditText_Roboto_Meidum
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/round_rect"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp" />

        <customfonts.TextViewSFProDisplayMedium
            android:id="@+id/txtFwdPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="43dp"
            android:gravity="right"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:text="Forgot Password?"
            android:textColor="#89000000"
            android:textSize="12.7sp" />

        <customfonts.Button_Roboto_Medium
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/red_round_rect"
            android:gravity="center_horizontal"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13.7sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="106dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#31707070" />

        <customfonts.MyTextView_Roboto_Medium
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="14.5dp"
            android:layout_marginBottom="2dp"
            android:letterSpacing="0.03"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="106dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#31707070" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>