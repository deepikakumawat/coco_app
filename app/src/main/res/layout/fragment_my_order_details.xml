<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/svTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lyOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="vertical">

                <!--Order Details-->

                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_details"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="@dimen/dimen_3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"

                        android:orientation="vertical">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/orderid"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />


                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtOrderDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/orderid"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--Sender Data-->

                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11sp"
                    android:layout_marginTop="11sp"
                    android:layout_marginRight="11sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="@string/sender_data"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"

                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="@dimen/dimen_3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtSenderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="sender name"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtSenderContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="25dp"
                            android:text="Sender Contact"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtSenderAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="25dp"
                            android:text="Sender address"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtSenderEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="25dp"
                            android:text="Sender email"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--Reciver data-->

                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:text="@string/receiver_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="@dimen/dimen_3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"

                        android:orientation="vertical">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtReceiverName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="receiver name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />


                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtReceiverEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="reciver email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--Delivery Data-->

                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:text="@string/delivery_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_3dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="@dimen/dimen_3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"

                        android:orientation="vertical">

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtDeliveryContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="delivery contact"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtDeliveryAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="delivery address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txtDeliveryCity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="City"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txtDeliveryState"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="State"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txtDeliveryPincode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Zipcode"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                        </LinearLayout>


                        <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtDeliveryLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="delivery landmark"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--product list-->
            <LinearLayout
                android:id="@+id/lyProductDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:text="@string/product_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMyOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <com.nav.richkart.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/txtNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="@string/no_data_found"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="MissingConstraints" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inTop"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone"
        shimmer:duration="800">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />

            <include layout="@layout/shimmer_place_holder_my_order_details" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>
