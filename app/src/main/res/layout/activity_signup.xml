<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgApplogo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:src="@drawable/register_page_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/imgApplogo"
                android:maxLines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:singleLine="true"
                android:text="Richkart The Version of Revolution"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp" />



            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etEmail"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/txtProductName" />


            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etFname"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:hint="First Name"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etLname"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:hint="Last Name"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/etFname" />

            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etPhone"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:hint="Phone"
                android:inputType="number"
                android:maxLength="10"
                app:layout_constraintTop_toBottomOf="@id/etLname" />


            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etPassword"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/etPhone" />

            <com.nav.richkart.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etConfirmPassword"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/etPassword" />


            <com.nav.richkart.customfonts.Button_Roboto_Medium
                android:id="@+id/btnSignup"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="Create Account"
                app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        style="@style/viewParent.headerText.settingsMiniTitle"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="Â©2017-2019, Richkart.com, Inc. or its affiliates"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>