<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@android:color/white"
    tools:context="com.example.wolfsoft2.coco_ecommerce_ui_kit.com.ws.wolfsoft2.coco_ecommerce_ui_kit.MyOrderActivity">


    <ScrollView
        android:id="@+id/svTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inTop"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lyOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Order Details-->

                <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11sp"
                    android:layout_marginTop="11sp"
                    android:layout_marginRight="11sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11sp"

                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="11dp">

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Order Details-->

                <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11sp"
                    android:layout_marginTop="11sp"
                    android:layout_marginRight="11sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11sp"

                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="11dp">

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Order Details-->

                <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11sp"
                    android:layout_marginTop="11sp"
                    android:layout_marginRight="11sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/background"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11sp"

                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="11dp">

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />

                        <com.richkart.android.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyCartProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="17.5dp"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28.4dp"
                    android:layout_marginTop="17.3dp"
                    android:layout_marginRight="28.4dp"
                    android:orientation="vertical">

                    <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/background"
                        android:letterSpacing="0.03"
                        android:textColor="@color/black"
                        android:textSize="13.3sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/lyDecrement"
                                android:layout_width="22.6dp"
                                android:layout_height="22.6dp"
                                android:layout_gravity="center"
                                android:background="@color/background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtIncDec"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.7dp"
                                android:layout_marginRight="10.7dp"
                                android:background="@color/background"
                                android:textColor="@color/black"
                                android:textSize="14.3sp" />

                            <LinearLayout
                                android:id="@+id/lyIncrement"
                                android:layout_width="22.6dp"
                                android:layout_height="22.6dp"
                                android:background="@color/background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtProductPrice"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24.3dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imgCross"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="24.3dp"
                                android:background="@color/background"
                                android:textColor="@color/black"

                                android:textSize="15sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyCartProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="17.5dp"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28.4dp"
                    android:layout_marginTop="17.3dp"
                    android:layout_marginRight="28.4dp"
                    android:orientation="vertical">

                    <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/background"
                        android:letterSpacing="0.03"
                        android:textColor="@color/black"
                        android:textSize="13.3sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/lyDecrement"
                                android:layout_width="22.6dp"
                                android:layout_height="22.6dp"
                                android:layout_gravity="center"
                                android:background="@color/background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtIncDec"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.7dp"
                                android:layout_marginRight="10.7dp"
                                android:background="@color/background"
                                android:textColor="@color/black"
                                android:textSize="14.3sp" />

                            <LinearLayout
                                android:id="@+id/lyIncrement"
                                android:layout_width="22.6dp"
                                android:layout_height="22.6dp"
                                android:background="@color/background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.richkart.android.customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/txtProductPrice"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24.3dp"
                            android:background="@color/background"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imgCross"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="24.3dp"
                                android:background="@color/background"
                                android:textColor="@color/black"

                                android:textSize="15sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>






</RelativeLayout>
