<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lyProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_rect"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_gravity="center"
            android:src="@drawable/richkart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/txtProductName"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Vigo Atom Personal Air Condi...."
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/dimen_2dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/green_rect"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_2dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_2dp">

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_12sp" />

                    <ImageView
                        android:layout_width="@dimen/dimen_8dp"
                        android:layout_height="@dimen/dimen_8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/star"
                        android:tint="@color/white" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtSalesProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="299"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_12sp" />

            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚¹ 209"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_12sp"
                />

            <TextView
                android:id="@+id/txtDiscout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30% OFF"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>