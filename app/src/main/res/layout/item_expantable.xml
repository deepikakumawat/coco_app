<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="17.2dp"
        android:paddingBottom="15.2dp"
        android:background="@color/white">

    <TextView
        android:id="@+id/category_name"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="13.3sp"
        android:layout_marginLeft="20.7dp"/>


        <ImageView
            android:id="@+id/arrow_id"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_down_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20.7dp"
        android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

    <RadioButton
        android:id="@+id/btn1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:textSize="11.3sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#666666"
        style="@style/radionbutton"
        android:paddingLeft="20dp"/>

        <RadioButton
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sony"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15.3dp">

        <RadioButton
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asus"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

        <RadioButton
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LG"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15.3dp">

        <RadioButton
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lenovo"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

        <RadioButton
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Samsung"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15.3dp">

        <RadioButton
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Xiaomi"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

        <RadioButton
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HTC"
            android:textSize="11.3sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#666666"
            style="@style/radionbutton"
            android:paddingLeft="20dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29.8dp"
            android:layout_marginTop="20.7dp"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus"
                android:tint="#000000"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="Show More"
                android:letterSpacing="0.03"
                android:textSize="11.3sp"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe1e3"/>

</LinearLayout>