<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="142.7dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white">



        <TextView
            android:layout_marginRight="12dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_dash"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10sp"
            android:paddingRight="10dp"
            android:text="@string/_1_34_900"
            android:textColor="#0f0d0d"
            android:textSize="14.3sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="19dp"
                    android:scaleType="fitStart"
                    android:layout_gravity="top"
                    android:id="@+id/mobile"
                    android:layout_width="99.7dp"
                    android:layout_height="162.7dp"
                    android:src="@drawable/img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/modelname"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apple_iphone_xs_max_space_grey_256_gb"
                        android:textColor="#0f0d0d"
                        android:textSize="13.3sp" />

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_cor_rect"
                            android:orientation="horizontal"
                            android:paddingBottom="2dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="2dp">


                            <TextView
                                android:id="@+id/txtrating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.7"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/star"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:src="@drawable/ic_star" />

                        </LinearLayout>

                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:id="@+id/rating"
                            android:layout_marginLeft="7.2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_764_ratings_amp_105_reviews"
                            android:textColor="#666666"
                            android:textSize="11.3sp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>





        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>