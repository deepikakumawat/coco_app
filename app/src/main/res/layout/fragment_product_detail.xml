<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ryParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:gravity="right">


                            <ImageView
                                android:id="@+id/imgAddToWishlist"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:src="@drawable/wishlist_inactive" />

                            <ImageView
                                android:id="@+id/imgRemoveWishlist"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:src="@drawable/wishlist_active" />


                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_product_detail"
                                android:layout_width="match_parent"
                                android:layout_height="285dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_weight="1"
                                android:clipToPadding="false"
                                android:paddingLeft="20dp" />


                            <RelativeLayout
                                android:id="@+id/rightNav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:padding="40dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_gray" />

                            </RelativeLayout>

                        </FrameLayout>

                        <HorizontalScrollView
                            android:id="@+id/hsv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lyImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="horizontal" />

                                <RelativeLayout
                                    android:id="@+id/ryVideo"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">


                                    <ImageView
                                        android:id="@+id/imgVideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/video_place_holder" />


                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/videoicon"
                                        android:tint="@color/white" />

                                </RelativeLayout>

                            </LinearLayout>


                        </HorizontalScrollView>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/viewline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtProductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_18sp"
                                android:textStyle="bold" />


                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtSellerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/appgray"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">


                                <customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="16.7sp" />

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductSalePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_20sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:textColor="@color/appgray"
                                    android:textSize="@dimen/txt_14sp" />

                                <customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/txtDiscout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/txt_14sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">


                                <customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/txtOutOfStock"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="@string/out_of_stock"
                                    android:textAllCaps="false"
                                    android:textColor="@color/yellow"
                                    android:textSize="16.7sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="21.5dp"
                                android:background="@color/viewline" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/green_rect"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="1dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="1dp">

                                        <customfonts.MyTextView_Roboto_Medium
                                            android:id="@+id/txtRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:textColor="@color/white"
                                            android:textSize="12.3dp" />

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/star"
                                            android:tint="@color/white" />


                                    </LinearLayout>


                                </LinearLayout>

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="center"
                                    android:textColor="@color/cut_price"
                                    android:textSize="12.3sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />


                <!--color and size layout-->
                <HorizontalScrollView
                    android:id="@+id/hsvColorSize"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rect_gray"
                    android:fillViewport="true"
                    android:measureAllChildren="false"

                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/lyColorSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" />

                </HorizontalScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />


                <include layout="@layout/include_product_details_specification" />

                <include layout="@layout/include_bought_products" />

                <include layout="@layout/delivery_and_review_layout" />


                <LinearLayout
                    android:id="@+id/lySimilarProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Similar Products"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="View More"
                            android:textColor="@color/yellow"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--Top Rated Recyclerview-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/recycler_view_border"
                        android:orientation="vertical"

                        >

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvTopRatedProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:padding="1dp"

                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyRecentViewsProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Views Products"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="View More"
                            android:textColor="@color/yellow"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvRecentViewsProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="20dp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <customfonts.Button_Roboto_Medium
            android:id="@+id/txtBuyNow"
            style="@style/buttonStyle"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@drawable/floating_button_buy_now"
            android:text="Buy Now" />


        <customfonts.Button_Roboto_Medium
            android:id="@+id/txtAddToCart"
            style="@style/buttonStyle"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@drawable/floating_button"
            android:text="+   Add To Cart"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inTop"
        android:layout_gravity="center"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone"
        shimmer:duration="800">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/shimmer_place_holder" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>
