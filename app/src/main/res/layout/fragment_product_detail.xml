<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.wolfsoft2.coco_ecommerce_ui_kit.com.ws.wolfsoft2.coco_ecommerce_ui_kit.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_product_detail"
                                android:layout_width="match_parent"
                                android:layout_height="285dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="23dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:clipToPadding="false"
                                android:paddingLeft="20dp" />


                            <RelativeLayout
                                android:id="@+id/rightNav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:padding="40dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_gray" />

                            </RelativeLayout>

                        </FrameLayout>

                        <HorizontalScrollView
                            android:id="@+id/hsv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lyImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="horizontal" />

                                <RelativeLayout
                                    android:id="@+id/ryVideo"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">


                                    <ImageView
                                        android:id="@+id/imgVideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/video_place_holder" />


                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/videoicon"
                                        android:tint="@color/white" />

                                </RelativeLayout>

                            </LinearLayout>




                        </HorizontalScrollView>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/viewline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtProductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtSellerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/blue"
                                android:textSize="16.7sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">


                                <customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="16.7sp" />

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductSalePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16.7sp" />

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:textColor="@color/cut_price"
                                    android:textSize="12.3sp" />

                            </LinearLayout>

                            <customfonts.MyTextView_Roboto_Bold
                                android:id="@+id/txtDiscout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/green"
                                android:textSize="12sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtAddToWishlist"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Add To Wishlist"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />



                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtRemoveWishlist"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Remove From Wishlist"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />

                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtBuyNow"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Buy Now"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />

                                <customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/txtOutOfStock"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="@string/out_of_stock"
                                    android:textAllCaps="false"
                                    android:textColor="@color/red"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="16.7sp"
                                    />

                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtAddToCart"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Add To Cart"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="21.5dp"
                                android:background="@color/viewline" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/green_rect"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="1dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="1dp">

                                        <customfonts.MyTextView_Roboto_Medium
                                            android:id="@+id/txtRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:textColor="@color/white"
                                            android:textSize="12.3dp" />

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/star"
                                            android:tint="@color/white" />


                                    </LinearLayout>


                                </LinearLayout>

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="center"
                                    android:textColor="@color/cut_price"
                                    android:textSize="12.3sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />




                <!--color and size layout-->
                <HorizontalScrollView
                    android:id="@+id/hsvColorSize"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:background="@drawable/rect_gray"

                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/lyColorSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" />

                </HorizontalScrollView>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />




                <include layout="@layout/include_product_details_specification" />

                <include layout="@layout/include_bought_products" />

                <include layout="@layout/delivery_and_review_layout" />


                <LinearLayout
                    android:id="@+id/lySimilarProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Similar Products"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="View More"
                            android:textColor="@color/red"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--Top Rated Recyclerview-->

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvTopRatedProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyRecentViewsProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Views Products"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="View More"
                            android:textColor="@color/red"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvRecentViewsProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="20dp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inTop"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="vertical"
        shimmer:duration="800">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/shimmer_place_holder" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>
