<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1.5dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/lyProduct"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:src="@drawable/richkart"
            android:layout_gravity="center"
             />

        <TextView
            android:fontFamily="@font/helveticaneue_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Iphone 6S, 32GB\n(Golden and Silver)"
            android:textAlignment="center"
            android:textColor="@color/primarytext"
            android:textSize="13sp"
            android:id="@+id/txtProductName"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:isIndicator="false"
                android:max="5"
                android:id="@+id/rbProductRating"
                android:numStars="5"
                android:layout_gravity="center"
                android:rating="2.5"
                android:stepSize="0.0"
                android:theme="@style/RatingBar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/latoblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_343"
                android:textSize="13sp"
                android:id="@+id/txtProductPrice"
                android:textColor="@color/primarytext"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/cart_of_ecommerce" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
