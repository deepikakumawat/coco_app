<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyCartProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="17.5dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.4dp"
            android:layout_marginTop="17.3dp"
            android:layout_marginRight="28.4dp"
            android:orientation="vertical">

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/background"
                android:letterSpacing="0.03"
                android:textColor="@color/black"
                android:textSize="13.3sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/lyDecrement"
                        android:layout_width="22.6dp"
                        android:layout_height="22.6dp"
                        android:layout_gravity="center"
                        android:background="@color/background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtIncDec"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.7dp"
                        android:layout_marginRight="10.7dp"
                        android:background="@color/background"
                        android:textColor="@color/black"
                        android:textSize="14.3sp" />

                    <LinearLayout
                        android:id="@+id/lyIncrement"
                        android:layout_width="22.6dp"
                        android:layout_height="22.6dp"
                        android:background="@color/background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txtProductPrice"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24.3dp"
                    android:background="@color/background"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgCross"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="24.3dp"
                        android:background="@color/background"
                        android:textColor="@color/black"

                        android:textSize="15sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        android:background="#48707070"
        android:orientation="vertical" />

</LinearLayout>