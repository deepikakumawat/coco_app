<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_80dp"
                            android:layout_height="@dimen/dimen_120dp"
                            android:id="@+id/imgProduct"
                            android:src="@drawable/richkart" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:id="@+id/lyOrderDetails"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Iphone X | 128 GB, Black | 6 GB ram |12000 mAh battry"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp"
                                android:id="@+id/txtProductName"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$ 288"
                                    android:id="@+id/txtPrice"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_14sp" />

                                <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:text="(Cash On Delivery)"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/txt_12sp" />
                            </LinearLayout>

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 288"
                                android:id="@+id/txtQuntity"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />

                            <com.nav.richkart.customfonts.MyTextView_Roboto_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 288"
                                android:id="@+id/txVendor"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_14sp" />



                                <Button
                                    android:id="@+id/btnCheckout"
                                    android:layout_width="120dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:background="#247EEA"
                                    android:text="But It Again "
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />





                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>