<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.MobileVerificationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <include layout="@layout/toolbar_cart"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="5dp">
            <customfonts.EditText_Roboto_Meidum
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Email ID"
                android:paddingLeft="28dp"
                android:paddingBottom="16.5dp"
                android:inputType="textEmailAddress"
                android:paddingTop="16.5dp"
                android:background="@drawable/round_rect"
                android:layout_marginTop="9dp"
                android:layout_marginRight="43dp"
                android:layout_marginLeft="43dp"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="28.6dp">

            <customfonts.Button_Roboto_Medium
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16.5dp"
                android:paddingTop="16.5dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13.7sp"
                android:layout_marginRight="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:background="@drawable/red_round_rect"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>