<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ryParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.MobileVerificationActivity">

    <include
        android:id="@+id/inTop"
        layout="@layout/toolbar_address_list" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inTop"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyConfirmationMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="28.6dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/send_email" />

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.3dp"
                android:letterSpacing="0.03"
                android:text="Check your mailbox."
                android:textColor="@color/black"
                android:textSize="13.3sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/white">

                <customfonts.EditText_Roboto_Meidum
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="43dp"
                    android:background="@drawable/round_rect"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="28dp"
                    android:paddingTop="16.5dp"

                    android:paddingBottom="16.5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@color/yellow"
                    android:textSize="13sp" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.6dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <customfonts.Button_Roboto_Medium
                    android:id="@+id/btnSend"
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="43dp"
                    android:gravity="center_horizontal"
                    android:text="Send"
                    android:textAllCaps="false" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>