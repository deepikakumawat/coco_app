<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/order_cancel_reason_title"
        android:textColor="@color/appgray"
        android:textSize="@dimen/txt_16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">


        <Spinner
            android:id="@+id/spReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="13.5sp" />


        <LinearLayout
            android:id="@+id/lyReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.richkart.android.customfonts.EditText_Roboto_Meidum
                android:id="@+id/etxtReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="Reason"
                android:maxLength="200"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:textSize="13.5sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <com.richkart.android.customfonts.Button_Roboto_Medium
                android:id="@+id/txtCancel"
                style="@style/smallbuttonStyle"
                android:layout_marginTop="9dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false" />


            <com.richkart.android.customfonts.Button_Roboto_Medium
                android:id="@+id/txtSubmit"
                style="@style/smallbuttonStyle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:text="Submit"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>