<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="152.7dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lyBroughtProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:src="@drawable/iphnx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <com.nav.richkart.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/iphone_6s_32gb_golden_and_silver"
                        android:textSize="13.3sp" />

                    <LinearLayout
                        android:layout_marginTop="7.3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSalesProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dashedline_rectangle_full"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/_1_34_900"
                            android:textColor="#0f0d0d"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="14.3sp" />

                        <com.nav.richkart.customfonts.MyTextView_Roboto_Black
                            android:id="@+id/txtProductPrice"
                            android:layout_marginLeft="7.2dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cutprice"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_60_off"
                        android:background="@drawable/rect_greybg"
                        android:textSize="12sp"/>

                        <LinearLayout
                            android:id="@+id/lyAddToCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgAddToCart"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dimen_30dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:src="@drawable/cart" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>