<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wolfsoft2.coco_ecommerce_ui_kit.com.ws.wolfsoft2.coco_ecommerce_ui_kit.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_product_detail"
                                android:layout_width="match_parent"
                                android:layout_height="285dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="23dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:clipToPadding="false"
                                android:paddingLeft="20dp" />


                            <RelativeLayout
                                android:id="@+id/rightNav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:padding="40dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_gray" />

                            </RelativeLayout>

                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/relative1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/iphnx1" />


                            </RelativeLayout>

                            <View
                                android:layout_width="0.7dp"
                                android:layout_height="60dp"
                                android:background="@color/viewline_ver" />


                            <RelativeLayout
                                android:id="@+id/relative2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/iphnx2" />


                            </RelativeLayout>

                            <View
                                android:layout_width="0.7dp"
                                android:layout_height="60dp"
                                android:background="@color/viewline_ver" />


                            <RelativeLayout
                                android:id="@+id/relative3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="15dp">


                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/iphnx3" />


                            </RelativeLayout>

                            <View
                                android:layout_width="0.7dp"
                                android:layout_height="60dp"
                                android:background="@color/viewline_ver" />

                            <RelativeLayout
                                android:id="@+id/relative4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="15dp">


                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/iphnx4" />


                            </RelativeLayout>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/viewline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txtProductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">


                                <customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/Rs"
                                    android:textColor="@color/black"
                                    android:textSize="16.7sp" />

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductSalePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16.7sp" />

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/txtProductPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:textColor="@color/cut_price"
                                    android:textSize="12.3sp" />

                            </LinearLayout>

                            <customfonts.MyTextView_Roboto_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="( 9% off )"
                                android:textColor="@color/green"
                                android:textSize="12sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtAddToWishlist"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Add To Wishlist"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />

                                <customfonts.Button_Roboto_Medium
                                    android:id="@+id/txtAddToCart"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/red_round_rect"
                                    android:paddingTop="16.5dp"
                                    android:paddingBottom="16.5dp"
                                    android:text="Add To Cart"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13.7sp" />
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="21.5dp"
                                android:background="@color/viewline" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/green_rect"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="1dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="1dp">

                                        <customfonts.MyTextView_Roboto_Medium
                                            android:id="@+id/txtRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:textColor="@color/white"
                                            android:textSize="12.3dp" />

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/star"
                                            android:tint="@color/white" />


                                    </LinearLayout>


                                </LinearLayout>

                                <customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/btn_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="center"
                                    android:text="@string/review"
                                    android:textColor="@color/cut_price"
                                    android:textSize="12.3sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="17dp">

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Storage"
                        android:textColor="@color/storage"
                        android:textSize="12.3sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/storage_gray_rect"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingTop="6dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="6dp"
                                android:text="16GB"
                                android:textColor="#d0d0d0"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/red_rect_normal"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingTop="6dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="6dp"
                                android:text="32GB"
                                android:textColor="@color/red"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/storage_gray_rect"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingTop="6dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="6dp"
                                android:text="64GB"
                                android:textColor="#d0d0d0"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/storage_gray_rect"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingTop="6dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="6dp"
                                android:text="128GB"
                                android:textColor="#d0d0d0"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:text="Color"
                        android:textColor="@color/storage"
                        android:textSize="12.3sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/right1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/black_circle"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/right1_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_tick" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/right2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cream_circle"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/right2_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_tick"
                                android:visibility="gone" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/right3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/light_pink_circle"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/right3_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_tick"
                                android:visibility="gone" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="17dp"
                        android:background="@color/viewline" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar_with_clock" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="EMIs from "
                            android:textColor="@color/storage"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/storage"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,085/month"
                            android:textColor="@color/storage"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_recycle" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Get Upto "
                            android:textColor="@color/storage"
                            android:textSize="13sp" />


                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/storage"
                            android:textSize="13sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15,600 off on exchange"
                            android:textColor="@color/storage"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d7d4d4" />

                <include layout="@layout/delivery_and_review_layout" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Top Rated Products"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="View More"
                        android:textColor="@color/red"
                        android:textSize="13sp" />
                </LinearLayout>

                <!--Top Rated Recyclerview-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvTopRatedProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/filter_plus" />


</RelativeLayout>
