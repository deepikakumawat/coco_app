<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.Cart1Activity">

    <include
        android:id="@+id/inTop"
        layout="@layout/include_shimmer_layout"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inTop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lyBottomView"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/lyCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.3dp"
                    android:layout_marginTop="13.3dp"
                    android:layout_marginRight="8.9dp"
                    android:background="@drawable/rect_recycler"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="20dp">


                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>


            </LinearLayout>


            <include layout="@layout/blank_screen" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/txtEmptyCart"
                android:layout_width="158dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_rect"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Empty Cart"
                android:textColor="@color/white"
                android:textSize="13.3sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.7dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.03"
                            android:text="Order Total"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <customfonts.TextViewSFProDisplayMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.02"
                            android:text="Total is including tax and delivery charges"
                            android:textColor="#99000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/txtTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:layout_marginRight="21dp"
                        android:letterSpacing="0"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18.3sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.3dp"
                android:layout_marginRight="10dp"
                android:gravity="right"

                android:orientation="horizontal">


                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txtCheckout"
                    android:layout_width="158dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_rect"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:text="Checkout"
                    android:textColor="@color/white"
                    android:textSize="13.3sp" />
            </LinearLayout>
        </LinearLayout>

        <customfonts.Button_Roboto_Medium
            android:id="@+id/txtContinueShopping"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shopping_rect"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/continue_shopping"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>